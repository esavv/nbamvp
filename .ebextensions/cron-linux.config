files:
  "/etc/cron.d/mycron":
    mode: "000644"
    owner: root
    group: root
    content: |
      0 6 * * 2 root cd /var/app/current && python3.11 predict_mvp.py --mode 'dev' >> /var/log/job1.log 2>&1 
      0 6-23 * * 3 root cd /var/app/current && python3.11 predict_mvp.py --mode 'prod' >> /var/log/job2.log 2>&1 

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/mycron.bak"